@using MvcFirmaCagri.Models.Entity
@model List<TblCagri>

<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        <i class="fa fa-bell-o"></i><span class="badge blue">3</span>
    </a>
    <ul class="dropdown-menu">
        <li>
            <div class="notification_header">
                <h3>Aktif Çağrı Bildirimleriniz..</h3>
            </div>
        </li>
        @foreach (var x in Model)

        {


        <li>
            <a href="/Default/CagriDetay/@x.ID/" class="grid">
                <div class="user_img"><img src="~/web2/starter/assets/images/avatar1.jpg" alt=""></div>
                <div class="notification_desc">
                    <p>@x.Konu</p>
                    <span>@x.Aciklama</span>
                </div>
            </a>
        </li>
        }

        <li>
            <div class="notification_bottom">
                <a href="#all" class="bg-primary">Tüm bildirimleri gör..</a>
            </div>
        </li>
    </ul>
</li>
